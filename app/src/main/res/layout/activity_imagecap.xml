<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:opencv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    tools:context=".ImageCapActivity"
    android:padding="0dp">

    <org.opencv.android.JavaCameraView
        android:id="@+id/imagecap_javaCameraView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        opencv:show_fps="true"
        />

    <com.mymensor.TouchImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/descvpblank"
        android:visibility="gone"
        />

    <ListView
        android:id="@+id/vp_list"
        android:padding="1dp"
        android:layout_height="wrap_content"
        android:layout_gravity="top|start"
        android:layout_toEndOf="@+id/imageView1"
        android:background="@android:color/transparent"
        android:layout_width="110dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_gravity="top|center"
        android:text="@string/vp_00"
        android:background="@android:color/holo_blue_dark"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/waitingTrkLoading"
        android:layout_width="252.67dp"
        android:layout_height="252.33dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/circulo_seamensor"
        android:padding="0dp"
        android:visibility="gone"        />

    <ImageButton
        android:id="@+id/button3"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:adjustViewBounds="true"
        android:onClick="onButtonClick"
        android:clickable="true"
        android:padding="4dp"
        android:scaleType="fitCenter"
        android:background="@android:color/transparent"
        android:src="@drawable/logoseamensor300dpi"
        android:visibility="visible" />

    <Button
        android:id="@+id/button2"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/custom_button"
        android:textColor="#000000"
        android:onClick="onButtonClick"
        android:clickable="true"
        android:text="@string/button_text"
        android:visibility="gone"
        />

    <Button
        android:id="@+id/buttonAlphaToggle"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/button2"
        android:background="@drawable/custom_button"
        android:textColor="#000000"
        android:onClick="onButtonClick"
        android:clickable="true"
        android:text="@string/button_alpha_toggle"
        android:visibility="gone"
        />

    <Button
        android:id="@+id/buttonFlashTorchVpToggle"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/buttonAlphaToggle"
        android:background="@drawable/custom_button"
        android:textColor="#000000"
        android:onClick="onButtonClick"
        android:clickable="true"
        android:text="@string/button_flash_toggle"
        android:visibility="gone"
        />

    <Button
        android:id="@+id/buttonShowVpCaptures"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/buttonFlashTorchVpToggle"
        android:background="@drawable/custom_button"
        android:textColor="#000000"
        android:onClick="onButtonClick"
        android:clickable="true"
        android:text="@string/button_show_vp_captures"
        android:visibility="gone"
        />

    <Button
        android:id="@+id/buttonShowPreviousVpCapture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/buttonShowVpCaptures"
        android:background="@drawable/custom_button"
        android:textColor="#000000"
        android:onClick="onButtonClick"
        android:clickable="true"
        android:padding="0dp"
        android:textSize="30dp"
        android:text="@string/button_show_previous_vp_capture"
        android:visibility="gone"
        />

    <Button
        android:id="@+id/buttonShowNextVpCapture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/buttonShowPreviousVpCapture"
        android:background="@drawable/custom_button"
        android:textColor="#000000"
        android:onClick="onButtonClick"
        android:clickable="true"
        android:padding="0dp"
        android:textSize="30dp"
        android:text="@string/button_show_next_vp_capture"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:lines="2"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textView2"
        android:gravity="center"
        android:text="@string/desc_vp_empty"
        android:textColor="@android:color/holo_blue_light"
        android:background="@android:color/background_dark"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/textViewIsPhotoOK"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:padding="4dp"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="@string/is_photo_ok"
        android:textColor="@android:color/holo_blue_light"
        android:background="@android:color/background_dark"
        android:textSize="20dp"
        android:visibility="gone"
        />

    <Button
        android:id="@+id/buttonAcceptVpPhoto"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="110dp"
        android:layout_marginStart="4dp"
        android:gravity="center"
        android:padding="0dp"
        android:background="@drawable/yesbutton"
        android:textColor="#000000"
        android:textSize="20dp"
        android:onClick="onButtonClick"
        android:clickable="true"
        android:text="@string/button_accept_vp_photo"
        android:visibility="gone"
        />

    <Button
        android:id="@+id/buttonRejectVpPhoto"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="235dp"
        android:layout_marginStart="4dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:padding="0dp"
        android:background="@drawable/nobutton"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:onClick="onButtonClick"
        android:clickable="true"
        android:text="@string/button_reject_vp_photo"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/imageViewTarget"
        android:layout_width="252.67dp"
        android:layout_height="252.33dp"
        android:src="@drawable/targetwhite"
        android:padding="0dp"
        android:visibility="invisible"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent" />

    <ImageView
        android:id="@+id/imageViewRadarScan"
        android:layout_width="252.67dp"
        android:layout_height="252.33dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/radarscan"
        android:padding="0dp"
        android:visibility="visible"
        android:layout_alignTop="@+id/imageViewTarget" />

    <ImageView
        android:id="@+id/imageViewVpChecked"
        android:layout_width="252.67dp"
        android:layout_height="252.33dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/greencheck"
        android:padding="0dp"
        android:visibility="gone"
        android:layout_alignTop="@+id/imageViewTarget" />

</RelativeLayout>
